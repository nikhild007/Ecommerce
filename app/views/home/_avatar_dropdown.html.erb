 <div class="dropdown">
    <a class="dropdown-toggle d-flex align-items-center hidden-arrow" href="#" role="button" id="avatarDropdown" data-bs-toggle="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= user_initials(current_user) %>
    </a>
    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="avatarDropdown">
        <% if current_user&.has_role?("admin") %>
            <li><%= link_to "Manage Orders", orders_path, class: "dropdown-item" %></li>
        <% else %>
            <li><%= link_to "My Orders", orders_path, class: "dropdown-item" %></li>
        <% end %>
        <li><%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %></li>
    </ul>
</div>