<div>
    <h4>All Products</h4>  
    <% if user_signed_in? %>
        <% if current_user.role == "ADMIN" %><%= link_to 'Add Product',new_product_path %><%end%>
    <%end%>
</div>

<div class="d-flex">
    <% for product in @products%>
        <div class="p-3 shadow">
            <a class="noStyleLink my-4" href="/products/<%= product.id%>">
                <div>
                    <%= image_tag product.image, alt: 'product Image', class: 'imgthumbnail' if product.image.attached? %>
                </div>
                <h5 class="my-3"><%= product.name %></h5>
            </a>
        </div>
    <% end %>
</div>
