
<% if flash[:error].present? %>
    <div class="text-danger"><%= flash[:error] %></div>
<% end %>

<h3>Add New Product</h3>
<%= form_with(model: @product, url: products_path, html: { class: "widthStyling" }) do |form| %>
    <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <%= form.label :description %><br>
        <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :price %><br>
        <%= form.number_field :price, step: '0.01', class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :stock_quantity %><br>
        <%= form.number_field :stock_quantity, class: 'form-control' %>
    </div>

   <div class="form-group">
    <%= form.label :image %><br>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <br/><br/>
  <div>
    <%= form.submit "Create Product", class: 'btn btn-primary' %>
  </div>
<% end %>