<div style="max-width:400px">
    <h6>Order Details : </h6>
    <% for item in @items %>
        <div class="d-flex justify-content-between align-items-center">
            <p><%= item.product.name%>  <strong>(x<%= item.quantity%>)</strong></p>
            <p>Rs<%= calculate_price(item.product.price,item.quantity)%>/- </p>
        </div>
    <%end%>
<h6> Total Order Value : Rs <%= calculate_total_order_value(@items) %>/- </h6>